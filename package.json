{
  "name": "clinic-run",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "NODE_ENV=production bun run scripts/build.ts",
    "dev": "vite",
    "start": "vite preview",
    "server": "bun run --watch lib/server.ts",
    "lint": "biome lint",
    "format": "biome format --write",
    "dev:all": "bun run scripts/dev.ts",
    "dev:test:all": "NODE_ENV=test bun run scripts/dev.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:seed": "bun run lib/db/seed.ts",
    "test:setup": "NODE_ENV=test bun run scripts/test-setup.ts",
    "test:db:generate": "NODE_ENV=test drizzle-kit generate --config drizzle.config.test.ts",
    "test:db:migrate": "NODE_ENV=test drizzle-kit migrate --config drizzle.config.test.ts",
    "test:db:seed": "NODE_ENV=test bun run lib/db/seed-performance.ts",
    "test:db:reset": "rm -f clinic-test.db && NODE_ENV=test bun run test:db:migrate && NODE_ENV=test bun run test:db:seed",
    "test:perf": "NODE_ENV=test bun run test:db:reset",
    "create-installer": "pwsh -ExecutionPolicy Bypass -File scripts/create-installer.ps1"
  },
  "workspaces": [
    "lib"
  ],
  "dependencies": {
    "@auth/core": "^0.40.0",
    "@fontsource-variable/playfair-display": "^5.2.6",
    "@fontsource/ibm-plex-mono": "^5.2.6",
    "@fontsource/source-sans-pro": "^5.2.5",
    "@heroicons/react": "^2.2.0",
    "@libsql/client": "^0.15.12",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tailwindcss/vite": "^4.1.12",
    "@tanstack/react-form": "^1.19.2",
    "@tanstack/react-query": "^5.85.5",
    "@tanstack/react-router": "latest",
    "@tanstack/router-devtools": "latest",
    "@tanstack/router-vite-plugin": "latest",
    "@trpc/client": "^11.5.0",
    "@trpc/next": "^11.5.0",
    "@trpc/react-query": "^11.5.0",
    "@trpc/server": "^11.5.0",
    "@trpc/tanstack-react-query": "^11.5.0",
    "@vitejs/plugin-react": "latest",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "currency-symbol-map": "^5.1.0",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.4",
    "drizzle-zod": "^0.8.3",
    "hono": "^4.9.4",
    "lucide-react": "^0.544.0",
    "react": "^19",
    "react-day-picker": "^9.9.0",
    "react-dom": "^19",
    "sonner": "^2.0.7",
    "superjson": "^2.2.2",
    "tailwind-merge": "^2.6.0",
    "trpc-server": "workspace:*",
    "vite": "latest",
    "zod": "^4.1.1"
  },
  "devDependencies": {
    "@better-auth/cli": "^1.3.7",
    "@biomejs/biome": "2.2.4",
    "@faker-js/faker": "^10.0.0",
    "@tanstack/react-router-devtools": "^1.131.28",
    "@tanstack/router-plugin": "^1.131.27",
    "@types/bun": "^1.2.21",
    "@types/node": "^24.3.0",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "babel-plugin-react-compiler": "^19.1.0-rc.3",
    "drizzle-kit": "^0.31.4",
    "postcss": "^8.5",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^4.1.12",
    "tsx": "^4.20.5",
    "tw-animate-css": "^1.3.7",
    "typescript": "^5",
    "vite-tsconfig-paths": "^4.0.0"
  }
}